<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/dialogEventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        android:textStyle="bold"
        tools:text="Event Title" />

    <TextView
        android:id="@+id/dialogEventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_calendar_black"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        tools:text="Event Date" />

    <TextView
        android:id="@+id/dialogEventLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_location_black"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        tools:text="Event Location" />

    <TextView
        android:id="@+id/dialogEventPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_ticket_black"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        tools:text="Event Price" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/dialogEventDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textColor="?android:attr/textColorSecondary"
        tools:text="This is a brief description of the event, explaining what it is about and who might be interested in attending it." />

</LinearLayout>
